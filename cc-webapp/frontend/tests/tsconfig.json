{
	"extends": "../tsconfig.json",
	"compilerOptions": {
		"types": ["@playwright/test", "node"],
		"module": "commonjs",
		"moduleResolution": "node",
		"target": "ES2020",
		"esModuleInterop": true,
		"allowJs": true,
		"skipLibCheck": true,
		"noEmit": true,
		"ignoreDeprecations": "6.0"
	},
	"include": ["**/*.ts", "**/*.tsx"],
	"exclude": ["node_modules"]
}
